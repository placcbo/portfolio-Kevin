{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/App.jsx"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    },
    "3333": {
      "label": "Sanity Studio",
      "onAutoForward": "openPreview",
      "requireLocalPort": true,
      "protocol": "http" // Changed from "https" to "http"
    }
  },
  "forwardPorts": [3000, 3333]
}