{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}